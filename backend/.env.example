# ===========================================
# Dreamware Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values

# ----- Database -----
# PostgreSQL credentials (used by both docker-compose and app)
POSTGRES_USER=dreamware
POSTGRES_PASSWORD=your-secure-database-password
POSTGRES_DB=dreamware

# Database URL for the application
# For Docker: postgresql://dreamware:your-password@db:5432/dreamware
# For local dev: postgresql://dreamware:your-password@localhost:5432/dreamware
DATABASE_URL=postgresql://dreamware:your-secure-database-password@localhost:5432/dreamware

# For tests (uses separate database)
TEST_DATABASE_URL=postgresql://dreamware:your-secure-database-password@localhost:5432/dreamware_test

# ----- Security -----
# JWT Secret Key - generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-generate-with-openssl-rand-hex-32

# ----- CORS -----
# Comma-separated list of allowed origins
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ----- S3 / Object Storage -----
# Leave empty to disable file uploads
S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
# For S3-compatible storage (e.g., MinIO, Hetzner), set custom endpoint:
S3_ENDPOINT_URL=

# ----- OAuth Providers -----
# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ----- AI Agent -----
# OpenAI-compatible API for the app submission agent (admin-only)
# The agent can visit app URLs, take screenshots, and create listings automatically
AGENT_API_BASE=https://api.openai.com/v1
AGENT_API_KEY=
AGENT_MODEL=gpt-4o
# Set to true for production (headless browser), false for debugging
AGENT_HEADLESS=true

# ----- Observability -----
# Logfire token for tracing Pydantic AI agent runs (optional)
# Get your token at https://logfire.pydantic.dev
LOGFIRE_TOKEN=
